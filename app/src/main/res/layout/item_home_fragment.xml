<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shop_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.6">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ci_headPic"
        app:layout_constraintTop_toTopOf="@+id/ci_headPic"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:text="@string/shop_area_hsinchu"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Title_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="位置 : "/>


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_Title_Address"
        app:layout_constraintStart_toEndOf="@id/tv_Title_Address"
        app:layout_constraintEnd_toEndOf="parent"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="123"/>

    <TextView
        android:id="@+id/tv_title_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title_Address"
        app:layout_constraintStart_toStartOf="@id/title"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="電話 : "/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_title_phone"
        app:layout_constraintStart_toEndOf="@+id/tv_title_phone"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="123"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_headPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"/>
    </android.support.constraint.ConstraintLayout>